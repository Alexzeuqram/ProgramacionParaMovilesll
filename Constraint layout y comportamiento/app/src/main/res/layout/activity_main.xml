<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <TextView
                    android:id="@+id/textViewSquare"
                    android:layout_width="164dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="168dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Box Two"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="374dp"
                    android:layout_height="41dp"

                    android:layout_above="@id/textViewSquare"
                    android:layout_alignStart="@id/textViewSquare"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="104dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Box One"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="401dp"
                    android:layout_height="45dp"
                    android:layout_above="@id/textViewSquare"
                    android:layout_alignStart="@id/textViewSquare"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:background="#FF006400"
                    android:gravity="center"
                    android:text="ColorMyViews"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="194dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/white"
                    android:text="Box Three"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@id/textViewSquare"
                    app:layout_constraintTop_toTopOf="@id/textViewSquare" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="194dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/white"
                    android:text="Box Four"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@id/textViewSquare"
                    app:layout_constraintTop_toBottomOf="@id/textView1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="194dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/white"
                    android:text="Box Five"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@id/textViewSquare"
                    app:layout_constraintTop_toBottomOf="@id/textView2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="194dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/white"
                    android:text="Box Six"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@id/textViewSquare"
                    app:layout_constraintTop_toBottomOf="@id/textView3" />

                <TextView
                    android:id="@+id/textViewGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="44dp"
                    android:text="This is a game: Tap the screen and buttons."
                    android:textColor="#151313"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewSquare" />

                <Button
                    android:id="@+id/buttonRed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="116dp"
                    android:text="Red"
                    app:layout_constraintEnd_toStartOf="@id/buttonYellow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewGame" />

                <Button
                    android:id="@+id/buttonYellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="116dp"
                    android:text="Yellow"
                    app:layout_constraintEnd_toStartOf="@id/buttonGreen"
                    app:layout_constraintStart_toEndOf="@id/buttonRed"
                    app:layout_constraintTop_toBottomOf="@id/textViewGame" />

                <Button
                    android:id="@+id/buttonGreen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="116dp"
                    android:text="Green"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/buttonYellow"
                    app:layout_constraintTop_toBottomOf="@id/textViewGame" />



        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
