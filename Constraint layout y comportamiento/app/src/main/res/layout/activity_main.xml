<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewSquare"
            android:layout_width="164dp"
            android:layout_height="170dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="Box Two"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="374dp"
            android:layout_height="41dp"

            android:layout_above="@id/textViewSquare"
            android:layout_alignStart="@id/textViewSquare"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="Box One"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="196dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/white"
            android:text="Box Three"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/textViewSquare"
            app:layout_constraintTop_toTopOf="@id/textViewSquare" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="196dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            android:text="Box Four"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/textViewSquare"
            app:layout_constraintTop_toBottomOf="@id/textView1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="196dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:text="Box Five"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/textViewSquare"
            app:layout_constraintStart_toEndOf="@id/textViewSquare"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textViewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:text="This is a game: Tap the screen and buttons."
            android:textColor="#151313"
            app:layout_constraintBottom_toTopOf="@+id/buttonRed"
            app:layout_constraintStart_toStartOf="@+id/textViewSquare"
            app:layout_constraintTop_toBottomOf="@+id/textViewSquare" />

        <Button
            android:id="@+id/buttonRed"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginBottom="4dp"
            android:text="Red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewSquare"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/buttonYellow"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:text="Yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonGreen"
            app:layout_constraintStart_toEndOf="@+id/buttonRed" />

        <Button
            android:id="@+id/buttonGreen"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:text="Green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textViewGame"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>


